<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_leader"
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
     android:padding="6dp"
    android:layout_height="wrap_content"
    android:background="@xml/bg_white_gray"
     android:descendantFocusability="blocksDescendants" 
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/height_list_item"
            android:layout_height="@dimen/height_list_item" >

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/img_default" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/paddings" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活动名称"
                android:textColor="@color/txt_blue_deep"
                android:textSize="@dimen/sp_content" />


            <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动描述"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/sp_content2" />

        </LinearLayout>

</LinearLayout>
</LinearLayout>